{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["DOM", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./types",
		"removeComments": true,
		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true
	},
	"include": ["./src/**/*"]
}
